extends header2 
block content 
    - n =1
    .container(style="margin-top:70px")
      .row 
        .col-lg-3.col-md-3.visible-lg.visible-md.row
          
          .userdetails
            h1.text-center="Test Id :"+testid
            a.getstarted.newqstnlink(href="/users/"+user+"/"+testid+"/addq",) Add a new question
          
            a.getstarted.newqstnlink(href="/delete/test?testid="+testid+"&username="+user) Delete Test

            a.getstarted.newqstnlink(href="/attempts?testid="+testid) Get Attempts
        .col-lg-9.col-md-9.col-sm-12.row
          
            each question in questions
              -options=question.options.split("&") 
              .quiz-box.custom-box.userquestionbox
                .question-number="question "+n
                -n+=1
                .question-text

                  p=question.title
              
                .option-container
                  each opt in options
                    .option=opt
                  
                  
                .answers-indicator
                  div=question.answer
                | 
                .next-btn
                  
                
                  a(href='/delete/question?qid='+question._id+"&username="+user+"&testid="+testid) 
                    
                      p Delete
            .quiz-box.optioncontainer
